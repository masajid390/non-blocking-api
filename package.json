{
  "name": "non-blocking-api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "docs": "NODE_ENV=development pnpm run generate:openapi && NODE_ENV=development tsx src/server.ts",
    "docs:serve": "PORT=3001 pnpm run docs"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.6.1",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.1.0",
    "node-cache": "^5.1.2",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/node": "^24.9.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6",
    "zod-to-json-schema": "^3.24.6"
  }
}